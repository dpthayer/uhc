  | AppTop      loc         .   fsCPatL     =   @patExpr.fsCPatL
  | Rec         loc         .   fsCPatL     =   @recPatExpr.fsCPatL
  | Con         loc         .   fsCPatL     =   []
  | * - App Con
                lhs         .   fsCPatL     =   []
%%]

