-------------------------------------------------------------------------
-- Map through eqn structure over lhs/rhs
-------------------------------------------------------------------------

{-
exprAsEqnMap :: (Expr -> Expr) -> (Expr -> Expr) -> Expr -> Expr
exprAsEqnMap l r e
  = case e of
      (Expr_AppTop e)
        -> Expr_AppTop (exprAsEqnMap l r e)
      (Expr_Op n ne d s) | n == nmEql
        -> Expr_Op n ne (l d) (r s)
      _ -> e
-}

-------------------------------------------------------------------------
-- Expr as AEqn
-------------------------------------------------------------------------

{
exprMbAEqn :: Expr -> Maybe AEqn
exprMbAEqn expr
  = eE expr
  where eE (Expr_Op n _ d s) | n == nmEql
          = do d' <- dE d
               s' <- sE s
               return (AEqn_Eqn d' s')
        eE (Expr_AppTop e)      = eE e
        eE (Expr_Named _ e)     = eE e
        eE _                    = Nothing
        dE (Expr_AVar n)        = return (AEqnDest_One n)
        dE (Expr_Var n)         = nE (show n)
        dE (Expr_StrAsIs s)     = nE s
        dE (Expr_Paren e)       = dE e
        dE (Expr_AppTop e)      = dE e
        dE (Expr_Named _ e)     = dE e
        dE e@(Expr_Op n _ _ _) | n == nmComma
          = do dL <- oE e
               return (AEqnDest_Many dL)
        dE _                    = Nothing
        oE (Expr_Op n _ e1 e2) | n == nmComma
          = do e1' <- dE e1
               e2' <- oE e2
               return (e1' : e2')
        oE e
          = do e' <- dE e
               return [e']
        sE e                    = return (AExpr_Expr e)
        nE n
          = case n of
              ('l':'o':'c':'.':nm) -> Just (AEqnDest_One (ANm_Loc (Nm nm)))
              ('l':'h':'s':'.':nm) -> Just (AEqnDest_One (ANm_Lhs (Nm nm)))
              _ -> Nothing
}


