-------------------------------------------------------------------------
-- Ruler AST, pass 2
-------------------------------------------------------------------------

-------------------------------------------------------------------------
-- Declarations
-------------------------------------------------------------------------

DATA Decl
  | RsVw                decl        : RsVwDecl

TYPE Decls = [Decl]

SET AllDc = Decl Decls

DATA RsVwDecl
  | Rs                  nm          : {Nm}
                        scNm        : {Nm}
                        inclVwS     : {Set.Set Nm}
                        descr       : {String}
                        vwDecls     : VwDecls
  | Grp                 nm          : {Nm}
                        scNm        : {Nm}
                        inclVwS     : {Set.Set Nm}
                        descr       : {String}
                        rlNms       : {[(Nm,Nm)]}

TYPE RsVwDecls = [RsVwDecl]

SET AllRs = RsVwDecl RsVwDecls

DATA VwDecl
  | Vw                  nm          : {Nm}
                        rlDecls     : RlDecls

TYPE VwDecls = [VwDecl]

SET AllVw = VwDecl VwDecls

DATA RlDecl
  | Rl                  nm          : {Nm}
                        pos         : {SPos}
                        mbAGStr     : {Maybe String}
                        inclVwS     : {Set.Set Nm}
                        preJds      : Jds
                        postJds     : Jds
  | AG                  nm          : {Nm}
                        pos         : {SPos}
                        arule       : ARule

TYPE RlDecls = [RlDecl]

SET AllRl = RlDecl RlDecls

DATA Jd
  | Ats                 nm          : {Nm}
                        scNm        : {Nm}
                        ats         : JdAts
  | AG                  nm          : {Nm}
                        scNm        : {Nm}
                        arule       : ARule
  | Expr                nm          : {Nm}
                        scNm        : {Nm}
                        expr        : Expr

TYPE Jds = [Jd]

SET AllJd = Jd Jds

DATA JdAt
  | At                  nm          : {Nm}
                        expr        : Expr

TYPE JdAts = [JdAt]

SET AllAt = JdAt JdAts

SET AllDecl
  = AllDc AllRs AllVw
    AllRl AllJd AllAt

-------------------------------------------------------------------------
-- Sets of AST data's
-------------------------------------------------------------------------

SET AllAS2 = AllDecl
