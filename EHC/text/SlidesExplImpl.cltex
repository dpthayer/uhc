                            in   (dBG'! | showBin :=
                                   \gr ->  case gr of
                                             (GBranch x ts)
                                               ->  showBin dx x
                                                   ++ showBin (df dBG') ts
                                 )
              in   dBG'
in
let  v1   =  showBin (dBG dBI dBL) (GBranch 3 Nil)
in   v1
