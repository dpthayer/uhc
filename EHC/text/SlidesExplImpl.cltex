let  dfltB    =  \_ -> (showBin = undefined)
     showBin  =  \x  -> x.showBin
     dBI      =  let  dBI'  =  let  dBI'! = dfltB dBI'
                               in   (dBI'! | showBin := ...)
                 in   dBI'
     dBL =  \_ ->  let  dBL' =  let  dBL'! = dfltB dBL'
                                in   (dBL'! | showBin := ...)
                   in   dBL'
