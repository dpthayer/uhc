%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%% Tag categories
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%[8 hs
data GrTagCateg
  =  GrTagCon
  |  GrTagHole
  |  GrTagRec
  |  GrTagApp
  |  GrTagFun
  |  GrTagPApp {grtgNeeds :: Int}
  |  GrTagWorld
  deriving (Show,Eq,Ord)

instance PP GrTagCateg where
  pp GrTagCon       = pp "C"
  pp GrTagHole      = pp "H"
  pp GrTagRec       = pp "R"
  pp GrTagApp       = pp "A"
  pp GrTagFun       = pp "F"
  pp (GrTagPApp need) = pp "P/" >|< pp need
%%]

