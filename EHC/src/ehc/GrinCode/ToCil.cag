%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%% Code generation
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%[(8 codegen grin)

ATTR GrAGItf GrModule [ | | cilAssembly : {Assembly} ]

ATTR GrGlobal GrGlobalL [ | | cilFields USE {++} {[]} : {[FieldDef]} ]

ATTR GrBind GrBindL [ | | cilMethods USE {++} {[]} : {[MethodDef]} ]

ATTR GrExpr GrPatLam GrVal [ | | cilCode USE {++} {[]} : {[MethodDecl]} ]

ATTR AllNT [ | | self : SELF ]

SEM GrModule
  | Mod lhs.cilAssembly = Assembly [] "EhcGenerated" (@loc.classDef : @loc.tagDefs)
        loc.classDef    = classDef Public @loc.name @globalL.cilFields (@loc.mainDef : @bindL.cilMethods) []
        loc.mainDef     = Method Static AssemblyVisible Void "AssemblyMain" []
                            [ entryPoint
                            , call StaticCallConv Object "" @loc.name "fun_main" []
                            , call StaticCallConv Void "mscorlib" "System.Console" "WriteLine" [Object]
                            , ret
                            ]
        loc.name        = "Haskell.Ehc." ++ hsnShowAlphanumeric @moduleNm
        loc.tagDefs     = map ctagTypeDef @ctagsMp

SEM GrGlobal
  | Global lhs.cilFields = [Field Static AssemblyVisible Object (hsnShowAlphanumeric @nm)]

SEM GrBind
  | Bind  lhs.cilMethods  = [Method Static AssemblyVisible Object (hsnShowAlphanumeric @nm) @loc.params @code]
          loc.code        = comment ("complete expr: " ++ show @expr.self) : comment "" : @expr.cilCode
          loc.params      = map (Param Object . hsnShowAlphanumeric) @argNmL
  | Rec   lhs.cilMethods  = error "Geen idee."

SEM GrExpr
  | Seq         lhs.cilCode = @expr.cilCode ++ @pat.cilCode ++ @body.cilCode
  | Unit        lhs.cilCode = @val.cilCode
  | UpdateUnit  lhs.cilCode = [comment $ show @self]
  | Case        lhs.cilCode = [comment $ show @self]
  | FetchNode   lhs.cilCode = [comment $ show @self]
  | FetchUpdate lhs.cilCode = [comment $ show @self]
  | FetchField  lhs.cilCode = [comment $ show @self]
  | Store       lhs.cilCode = [comment $ show @self]
  | Call        lhs.cilCode = [comment $ show @self]
  | FFI         lhs.cilCode = [comment $ show @self]
  | Eval        lhs.cilCode = [comment $ show @self]
  | App         lhs.cilCode = [comment $ show @self]
  | Throw       lhs.cilCode = [comment $ show @self]
  | Catch       lhs.cilCode = [comment $ show @self]

SEM GrVal
  | Empty       lhs.cilCode = [comment $ show @self]
  | LitInt      lhs.cilCode = [comment $ show @self]
  | Tag         lhs.cilCode = [comment $ show @self]
  | Var         lhs.cilCode = [comment $ show @self]
  | Node        lhs.cilCode = [comment $ show @self]
  | VarNode     lhs.cilCode = [comment $ show @self]
  | BasicNode   lhs.cilCode = [comment $ show @self]
  | EnumNode    lhs.cilCode = [comment $ show @self]
  | OpaqueNode  lhs.cilCode = [comment $ show @self]
  | PtrNode     lhs.cilCode = [comment $ show @self]
  -- TODO NodeAdapt in variant 10

SEM GrPatLam
  | Empty       lhs.cilCode = [comment $ show @self]
  | Var         lhs.cilCode = [stlocN $ hsnShowAlphanumeric @nm]
  | VarNode     lhs.cilCode = [comment $ show @self]
  | BasicNode   lhs.cilCode = [comment $ show @self]
  | EnumNode    lhs.cilCode = [comment $ show @self]
  | PtrNode     lhs.cilCode = [comment $ show @self]
  | OpaqueNode  lhs.cilCode = [comment $ show @self]
  | BasicAnnot  lhs.cilCode = [comment $ show @self]
  | EnumAnnot   lhs.cilCode = [comment $ show @self]
  | PtrAnnot    lhs.cilCode = [comment $ show @self]
  | OpaqueAnnot lhs.cilCode = [comment $ show @self]

%%]


