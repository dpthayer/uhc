%%[8 hs

grinStoreArity :: Bool
grinStoreArity = False

mkGrTagNode :: GrTagCateg -> Int -> HsName -> GrValL -> GrVal
mkGrTagNode c t n vL
 = if grinStoreArity
    then GrVal_Node (GrTag_Lit c t n) (GrVal_LitInt (length vL) : vL)
    else GrVal_Node (GrTag_Lit c t n)                             vL

mkGrPatTagNode :: GrTagCateg -> Int -> HsName -> [HsName] -> GrPatAlt
mkGrPatTagNode c t n pL
 = if grinStoreArity
    then GrPatAlt_Node (GrTag_Lit c t n) (hsnWild : pL)
    else GrPatAlt_Node (GrTag_Lit c t n)            pL
%%]

%%[10 hs
mkGrPatTagSplit :: GrTagCateg -> Int -> HsName -> HsName -> GrSplitL -> GrPatAlt
mkGrPatTagSplit c t n r sL
 = GrPatAlt_NodeSplit (GrTag_Lit c t n) r sL

%%]


%%[8 hs
-- partial parametrizarions of the above
mkGrConNode :: GrTagAnn -> Int -> HsName -> GrValL -> GrVal
mkGrConNode ann = mkGrTagNode (GrTagCon ann)

mkGrRecNode ::  GrValL -> GrVal
--mkGrRecNode  = mkGrTagNode GrTagRec 0 hsnRec
mkGrRecNode xs
  = mkGrTagNode (GrTagCon $ mkGrTagAnn a a) 0 (hsnProd a) xs
  where a = length xs

mkGrPatConNode :: GrTagAnn -> Int -> HsName -> [HsName] -> GrPatAlt
mkGrPatConNode ann = mkGrPatTagNode (GrTagCon ann)

mkGrPatRecNode :: [HsName] -> GrPatAlt
--mkGrPatRecNode  = mkGrPatTagNode GrTagRec 0 hsnRec
mkGrPatRecNode xs
  = mkGrPatTagNode (GrTagCon $ mkGrTagAnn a a) 0 (hsnProd a) xs
  where a = length xs

mkGrBox :: HsName -> GrVal -> GrVal
mkGrBox tyNm v = mkGrConNode (mkGrTagAnn 1 1) 0 tyNm [v]

mkGrUnbox :: HsName -> HsName -> GrPatLam
-- mkGrUnbox tyNm n = mkGrPatConNode (mkGrTagAnn 1 1) 0 tyNm [n]
-- mkGrUnbox tyNm n = GrPatLam_VarNode [ hsnUnknown, n ]
mkGrUnbox tyNm n = let tag = GrTag_Lit (GrTagCon (mkGrTagAnn 1 1)) 0 tyNm
                   in  GrPatLam_VarNode [ GrVar_KnownTag tag, GrVar_Var n ]

mkGrUnboxFFI :: HsName -> GrPatLam
-- mkGrUnboxFFI n = GrPat_Node GrTag_Unboxed [n]
--mkGrUnboxFFI n = GrPatLam_VarNode [ hsnUnknown, n]
mkGrUnboxFFI   n = let tag = GrTag_Unboxed
                   in  GrPatLam_VarNode [ GrVar_KnownTag tag, GrVar_Var n ]

%%]

%%[10 hs
mkGrPatConSplit :: GrTagAnn -> Int -> HsName -> HsName -> GrSplitL -> GrPatAlt
mkGrPatConSplit ann = mkGrPatTagSplit (GrTagCon ann)

mkGrPatRecSplit :: HsName -> GrSplitL -> GrPatAlt
mkGrPatRecSplit  = mkGrPatTagSplit GrTagRec 0 hsnRec
%%]
