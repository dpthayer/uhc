%%% Constructing: tag
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

Offsets should coincide with def of GB_NodeHeader, src/rts/grinbc/grinbc

%%[8 hs
[tgShSize,tgShNdEv,tgShCateg,tagShGC]
  = if Cfg.use32Bits then [16,14,12,10::Int] else [32,30,28,26]
%%]

load tag, yield stack increment and additional size to alloc
%%[8 hs export(tag)
tag :: ValAccessGam -> Int -> Int -> GrTag -> Int -> (InsSeq,Int,Int)
tag vag modNmConstInx stkDepth gt sz
  = case gt of
      GrTag_Lit categ tg nm
        -> (tins :++: FSeqL [ldc tword],tinc+1,allocInc)
        where (needEval,categ',tg',tins,tinc,allocInc)
                = case categ of
                    GrTagCon      -> (0,0,tg,FSeqNil,0,0)
                    GrTagHole     -> (0,3,tg,FSeqL [ldc 0],1,0)
                    GrTagRec      -> (0,0,tg,FSeqNil,0,0)
                    GrTagApp      -> (1,1,tg,FSeqNil,0,0)
                    GrTagFun      -> (1,0,tg,ins,inc,0)
                                  where (ins,inc) = nmLd vag modNmConstInx stkDepth nm
                    GrTagPApp m   -> (0,1,m ,ins,inc,0)
                                  where (ins,inc) = nmLd vag modNmConstInx stkDepth nm
              tword = (toInteger (sz+tinc+allocInc+1) `shiftL` tgShSize) .|. needEval `shiftL` tgShNdEv .|. categ' `shiftL` tgShCateg .|. toInteger tg'
      _ -> (FSeqNil,0,0)
%%]

