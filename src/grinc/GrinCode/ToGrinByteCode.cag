%%[8
ATTR AllGrExpr [ | stkDepth: Int | ]

SEM GrBind
  | Bind        loc         .   stkDepth        =   0

SEM GrExpr
  | Unit Store Call Eval App -- Case
                loc         .   valDepth        =   @lhs.stkDepth + @valStkInc

SEM GrExpr
  | Unit Store Call Eval App
                lhs         .   stkDepth        =   @valDepth
  | Case        lhs         .   stkDepth        =   @lhs.stkDepth

SEM GrAlt
  | Alt         loc         .   stkDepth        =   @lhs.stkDepth + length @pat.introNmL

